$(function() {
  headerTransparent.init();
});
  
  var headerTransparent = {
    init: function(){
      var headerHeight = 0;
      var topbarHeight = 0;
      if( $('.header-transparent').length ){
        headerHeight = $('.header-transparent').outerHeight();
      }
      if( $('.top-bar-transparent').length ){
        topbarHeight = $('.top-bar-transparent').outerHeight();
      }
      var totalHeight = parseInt(headerHeight) + parseInt(topbarHeight);
      $('.template-index #shopify-section-header + *').css('margin-top','-'+parseInt(totalHeight)+'px');
    }
  }
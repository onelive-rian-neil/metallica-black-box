.box {
    width: 40%;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.2);
    padding: 35px;
    border: 2px solid #fff;
    border-radius: 20px/50px;
    background-clip: padding-box;
    text-align: center;
}

.pulogin {
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.75);
    transition: opacity 500ms;
    z-index: 2147483647;
    display: flex;
    align-items: center;
}

.popup {
    margin: 0 auto;
    padding: .5em;
    border-radius: 8px;
    border: 1px solid #333;
    width: 95%;
    max-width: 500px;
    position: relative;
    transition: all 5s ease-in-out;
}

.popup .close {
    position: absolute;
    top: 6px;
    right: 10px;
    transition: all 200ms;
    font-size: 20px;
    text-decoration: none;
    color: black;
    background: none
}

.popup .content {
    max-height: 30%;
    overflow: auto;
}

@media screen and (max-width: 700px) {
    .box {
        width: 70%;
    }
    .popup {
        width: 70%;
    }
}
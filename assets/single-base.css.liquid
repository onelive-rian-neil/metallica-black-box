/* Icons */
@import url("//fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined");

/** Resets **/
*:focus {
    outline: 0;
}

img {
    max-width: 100%;
}

/** Layout **/

.single-grid-item {
    margin: 0 auto;
    padding: 0 5rem;
    max-width: 1200px;
    max-width: var(--page-width);
    display: flex;
    gap: 2em;
    box-sizing: border-box;
}

.single-grid-item * {
    box-sizing: border-box;
}

.single-col {
    gap: 1em;
}

.col-1_4 {
    width: 25%;
}

.col-1_3 {
    width: 33.333%;
}

.col-2_4 {
    width: 50%;
}

.col-2_3 {
    width: 66.667%;
}

.col-3_4 {
    width: 75%;
}

.col-4_4,
.col-3_3 {
    width: 100%;
}

/** Text **/
a {
    color: inherit;
    text-decoration: none;
    cursor: pointer;
}

.text-center {
    text-align: center;
}

.single-align-center {
    margin: 0 auto;
    align-self: center;
}

.hidden {
    display: none !important;
}

/** Single Collections **/
.single-collection {
    gap: 0;
    flex-wrap: wrap;
}

.single-collection-product {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    margin-bottom: 2em;
    padding: 1em;
}

.single-collection-product-link,
.single-collection-product-form {
    width: 100%;
}

.single-collection-product-link {
    flex-grow: 1;
}

.single-collection-product-img-wrap {
    width: 100%;
    aspect-ratio: 1;
    overflow: hidden;
}

.single-collection-product-img {
    width: 100%;
    aspect-ratio: 1;
    object-fit: cover;
    transition: transform 0.2s linear 0s;
}

.single-collection-product-img:hover {
    transform: scale(1.05);
    transition: transform 0.2s linear 0s;
}

.single-collection-product-price {
    margin: 0;
}

.single-variant-select-wrap {
    margin-bottom: .5em;
    display: flex;
    position: relative;
    width: 100%;
}

.single-variant-select {
    -webkit-appearance: none;
    appearance: none;
    position: relative;
    width: 100%;
    min-height: 40px;
    padding: 0 2rem;
}

.single-variant-select-wrap .icon-caret {
    position: absolute;
    height: 0.6rem;
    top: calc(50% - .2rem);
    right: 1.5rem;
}

.single-collection-add-to-cart {
    width: 100%;
}

/** Single Cards **/
.single-card-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 1em;
    justify-content: flex-start;
}

.single-card-row {
    overflow-x: auto;
    white-space: nowrap;
    -ms-overflow-style: none;
    scrollbar-width: none;
    -webkit-overflow-scrolling: touch;
    padding-left: 5px;
    padding-top: 5px;
    padding-bottom: 5px;
}

.single-card-row::-webkit-scrollbar {
    display: none;
}

.single-card-large {
    width: calc(50% - .5em);
    border: 1px solid lightgray;
    border: 1px solid rgba(var(--color-foreground), 0.08);
    border-radius: 5px;
    padding: 1.5em;
    cursor: pointer;
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    line-height: 1.5;
}

.single-card-small {
    width: calc(25% - 0.8em);
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
    overflow: hidden;
    border: 1px solid rgba(var(--color-foreground), 0.08);
    border-radius: 5px;
}

.single-card:hover {
    cursor: pointer;
}

.single-card-image {
    margin-right: 1.5em;
    width: 30%;
}

.single-card-image>img {
    max-width: 100%;
}

.single-card-image-wide {
    flex-grow: 1;
    display: flex;
    overflow: hidden;
}

.single-card-image-wide>img {
    height: 100%;
    object-fit: contain;
    aspect-ratio: 16/9;
    max-width: 100%;
}

.single-card-video>.single-card-image-wide {
    aspect-ratio: 16 / 9;
    box-shadow: 0 1px 1px hsl(0deg 0% 0% / 8%), 0 2px 2px hsl(0deg 0% 0% / 8%),
        0 4px 4px hsl(0deg 0% 0% / 8%), 0 8px 8px hsl(0deg 0% 0% / 8%), 0 16px 16px hsl(0deg 0% 0% / 8%);
    background-size: cover;
    width: 100%;
    border-radius: 8px;
    background-position: center;
    overflow: hidden;
    transition: all linear .1s;
    position: relative;
}

.single-card-info {
    width: 70%;
}

.single-card-description {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
}

.card__badge {
    margin-bottom: 1em;
}

.single-card-video {
    display: inline-flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 20%;
    margin-right: 1em;
    text-decoration: none;
    vertical-align: middle;
    cursor: pointer;
    color: inherit;
}

.single-card-video:hover .single-card-image-wide {
    transform: scale(1.025);
    transition: all linear .1s;
}

.single-card-video:last-of-type {
    margin-right: 60px;
}


.single-video-info {
    padding: .5em;
}

.single-video-title,
.single-video-description {
    margin: 0;
}

.single-video-description {
    color: rgba(var(--color-foreground), 0.5);
    letter-spacing: 0;
}

/** Key Group **/
.single-key-group {
    padding: 1.5em;
    border: 1px solid lightgray;
    border: 1px solid rgba(var(--color-foreground), 0.08);
    border-radius: 5px;
    margin-bottom: 3em;
    justify-content: start;
}

.single-card-key {
    width: calc(20% - 0.8em);
    display: inline-flex;
    flex-direction: column;
    justify-content: space-between;
    border: 1px solid lightgray;
    border: 1px solid rgba(var(--color-foreground), 0.08);
    border-radius: 5px;
    overflow: hidden;
}

.single-key-image {
    flex-grow: 1;
    display: flex;
}

.single-key-image>img {
    height: 100%;
    object-fit: cover;
    max-width: 100%;
}

.single-key-info {
    font-size: 75%;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: .5em;
    line-height: 1;
    border-top: 1px solid lightgray;
    border-top: 1px solid rgba(var(--color-foreground), 0.08);
}

/* Tablet */
@media screen and (max-width: 990px) {

    .single-col.col-1_4 {
        width: 50%;
    }

    .single-card-key {
        width: calc(25% - .75em);
    }

    .single-card-large {
        width: 100%;
    }
}

/* Mobile */
@media screen and (max-width: 750px) {

    .single-grid-item {
        flex-direction: column;
        padding: 0 1.5rem;
    }

    .single-col {
        width: 100% !important;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }

    .single-card-large {
        flex-direction: column;
    }

    .single-card-image,
    .single-card-info {
        margin: 0;
        width: 100%;
    }

    .single-key-group {
        padding: 1em;
    }

    .single-card-key {
        width: calc(50% - .5em);
    }

    .single-key-image>img {
        height: auto;
    }
}

/** Animations **/
.animated {
    -webkit-animation-duration: 0.25s;
    animation-duration: 0.25s;
    -webkit-animation-fill-mode: both;
    animation-fill-mode: both;
}
{% comment %}
<!-- Single Default Styles - Can be edited in assets/single.css -->
{% endcomment %}
{{ 'single-base.css' | asset_url | stylesheet_tag }}
{{ 'single-video.css' | asset_url | stylesheet_tag }}

{% assign chat_enabled = 'false' %}

{% if preview_enabled == 'true' %}
    <style>
        .preview {
            position: relative;
            background-color: #000000;
            text-align: center;
        }

        .single-preview-image {
            height: 100%;
        }

        .single-lock {
            width: 5%;
            position: absolute;
            top: 50%;
            left: 50%;
            transform:translate(-50%, -50%);
            z-index:1;
            opacity: 0;
            animation: 2s fadeIn 1s forwards;
            -webkit-animation: 2s fadeIn 1s forwards;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        @-webkit-keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }
    </style>
{% endif %}

{% if preview_enabled == 'true' %}
    {% comment %}
    <!-- Video Preview (thumbnail only) -->
    {% endcomment %}
    <div class="single-video-wrap preview">
        <img class="single-preview-image" src="{{ video_thumbnail }}" />
        <div class="single-lock">
            {% render 'single-icon-padlock' %}
        </div>
    </div>
{% else %}
    {% comment %}
    <!-- Video Player -->
    {% endcomment %}
    <div class="single-video-wrap">
        <div id="single-livestream-player"
             class="single-video-player {% if chat_enabled == 'false' %}chat-disabled{% endif %}">
            <script src="https://{{ video_host }}/assets/livestream-embed.js?id={{ video_id }}&customerEmail={{ customer.email }}{% if customer_wallet %}&customerId={{ customer_wallet }}{% endif %}"
                    type="text/javascript"></script>
        </div>
    </div>
{% endif %}

{% comment %}
<!-- Video Description -->
{% endcomment %}
<div class="single-grid-item">
    <div class="single-video-info">
        <h3>{{ video_title }}</h3>
        <h5>{{ video_artist }}</h5>
        <h5>{{ video_date | date: "%b %e, %Y" }}</h5>
        <p>{{ video_description }}</p>
    </div>
</div>

{% comment %}
<!-- Products for unlocking the video -->
{% endcomment %}
{% if preview_enabled == 'true' %}
    {{ 'single-gated-content.css' | asset_url | stylesheet_tag }}
    {% render 'single-key-products', key_product_ids: key_product_ids, key_product_listings: key_product_listings  %}
{% endif %}

{% comment %}
<!-- Promoted Products -->
{% endcomment %}
{% if collections[collection_handle].products %}
    {% render 'single-video-promoted-products', collection_handle: collection_handle, video_id: video_id  %}
{% endif %}
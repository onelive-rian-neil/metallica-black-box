{% render 'single-customer-storage' %}

{% render 'single-product-block', product: product, show_title: 'true', description_position: 'above_cart',
        show_images: 'true', show_add_to_cart: 'true', show_buy_it_now: 'true',
        title_size: 'h1', price_size: 'h3', image_width: '2_4', product_width: '2_4' %}

<single-grant-access
        product-id="{{ product.id }}"
        title="This product unlocks..."
        title-size="h1"
        row-title-size="h2"
        product-title=""
        video-title=""
        no-items-title=""
        show-key-product="false"
        show-video-title="true"
        show-video-date="true"
        show-video-artist="true"
        show-product-title="true"
        show-product-description="true"
        show-product-price-badge="true"
        show-preview-items="true"
        show-spinner="false"
        top-padding="3em"
        bottom-padding="2em"
        column-count="4"
        video-column-width="1"
        product-column-width="2"
></single-grant-access>

<single-need-access
        title="Get Access"
        title-size="h1"
        top-padding="3em"
        bottom-padding="2em"
        content-id="{{ product.id }}"
        content-type="PRODUCT"
></single-need-access>

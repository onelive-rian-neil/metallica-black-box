<div class="single-grid-item single-collection">
  {% for product in collections[collection_handle].products %}
  <div class="single-collection-product single-col col-1_4">
    <a class="single-collection-product-link"
       href="{{ product.url }}"
       target="_blank">
      <div class="single-collection-product-img-wrap">
        <img class="single-collection-product-img"
             src="{{ product.featured_image | img_url: '640x640' }}"
             alt="{{ product.featured_image.alt }}" />
      </div>
      <h5 class="single-collection-product-title card__heading h5">{{ product.title }}</h5>
      <p class="single-collection-product-price"
         id="single-product-price-{{product.id}}">{{ product.variants.first.price | money }}</p>
    </a>
    <form class="single-collection-product-form"
          action="/cart/add"
          method="post"
          enctype="multipart/form-data"
          id="product_form_{{product.id}}">
      {% if product.variants.size > 1 %}
      <div class="select single-variant-select-wrap">
        <select name="id"
                class="single-variant-select select__select"
                id="single-variant-select-{{product.id}}"
                onchange="setPrice(this.options[this.selectedIndex]);">
          {% for variant in product.variants %}
          {% if variant.available == true %}
          <option value="{{variant.id}}"
                  data-price="{{variant.price | money }}"
                  data-product-id="{{product.id}}">{{ variant.title }}</option>
          {% endif %}
          {% endfor %}
        </select>
        {% render 'single-icon-caret' %}
      </div>
      {% else %}
      <input type="hidden"
             name="id"
             value="{{ product.variants.first.id }}" />
      {% endif %}
      <input type="submit"
             name="add"
             id="add"
             value="Add to Cart"
             class="single-collection-add-to-cart button button-primary btn btn-primary">
    </form>
  </div>
  {%- endfor -%}
</div>
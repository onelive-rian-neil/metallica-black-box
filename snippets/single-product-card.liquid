{% if shop.metafields.single_gated_content[product_input] != blank %}
    {% assign product = shop.metafields.single_gated_content[product_input].value %}
{% elsif all_products[product_input] != blank %}
    {% assign product = all_products[product_input] %}
{% endif %}

{% if product %}
    <div class="single-card single-card-large" onclick="location.href='{{ product.url }}';">
        <div class="single-card-image">
            {% render 'single-image', image: product.images.first %}
        </div>
        <div class="single-card-info">
            <h3>{{ product.title }}</h3>
            <p class="single-card-description">{{ product.description }}</p>
            {% if product.available %}
                <div class="card__badge">
              <span class="badge badge--bottom-left">
                {% if product.price == 0 %}
                    FREE
                {% elsif settings.currency_code_enabled %}
                    {{ product.price | money_with_currency }}
                {% else %}
                    {{ product.price | money }}
                {% endif %}
              </span>
                </div>
            {% else %}
                <div class="card__badge">
                    <span class="badge badge--bottom-left color-{{ settings.sold_out_badge_color_scheme }}">{{ 'products.product.sold_out' | t }}</span>
                </div>
            {% endif %}
            {% if required_amount and required_amount > "1" %}
                <div class="card__badge">
                    <span class="badge badge--bottom-left">{{ required_amount }} Required</span>
                </div>
            {% endif %}
        </div>
    </div>
{% endif %}